@model Customer

<h1 class="display-4">My Profile</h1>
<form asp-action="Index">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="form-group row">
        <label asp-for="CustomerID"  class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="CustomerID" readonly class="form-control-plaintext" value="@Model.CustomerID">
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="Name" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input  asp-for="Name" value="@Model.Name">
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="TFN" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input  asp-for="TFN" value="@Model.TFN">
            <span asp-validation-for="TFN" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="Address" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input  asp-for="Address" value="@Model.Address">
            <span asp-validation-for="Address" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="Suburb" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input  asp-for="Suburb" value="@Model.Suburb">
            <span asp-validation-for="Suburb" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="State" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <select class="form-select" asp-for="State">
                @if (@Model.State == null)
                {
                    <option selected value="@null">n/a</option>
                }
                @if (@Model.State != null)
                {
                    <option selected value="@Model.State">@Enum.GetName(typeof(State), Model.State)</option>
                    <option value="@null">n/a</option>
                }
                @foreach (State state in Enum.GetValues(typeof(State)))
                {
                    if (Model.State != state)
                    {
                        <option value="@state.ToString()">@state</option>
                    }
                }
            </select>
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="Postcode" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input  asp-for="Postcode" value="@Model.Postcode">
            <span asp-validation-for="Postcode" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="Mobile" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input  asp-for="Mobile" value="@Model.Mobile">
            <span asp-validation-for="Mobile" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <input type="submit" value="Save Changes" class="btn btn-primary" />
    </div>
</form>

<div>
    <a asp-action="ChangePassword">Change Password</a>
</div>