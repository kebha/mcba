<!--this view is built off of code from day 6 McbaExampleWithLogin-->
@model Login


<div class="container">
    <div clss="row">
        <div>
            <h1>Welcome to The Most Common Bank of Australia!</h1>
            <p>If you are already a customer of MCBA, you may login below make transaction from your accounts, view MyStatements or organize bill Payments.</p>
        </div>
    </div>
    <h1 class="display-4">Login</h1>
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Index">
                <div class="form-group">
                    <label asp-for="LoginID" class="control-label"></label>
                    <input asp-for="LoginID" class="form-control"/>
                    <span asp-validation-for="LoginID" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label for="Password" class="control-label">Password</label>
                    <input id="Password" name="Password" type="password" class="form-control"
                           data-val="true" data-val-required="The Password field is required."/>
                    @Html.ValidationMessage("Password", new {@class = "text-danger"})
                </div>
                <div class="form-group">
                    <input type="submit" value="Login" class="btn btn-primary"/>
                </div>
                @Html.ValidationMessage("LoginFailed", new {@class = "text-danger"})
            </form>
        </div>
    </div>
</div>


@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
