@model SelectPeriodModel

<h1>Select the Period you wish to View</h1>
<p>Leave blank for no filter</p>
<form asp-action="SelectPeriod">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input asp-for="AccountID"  type="hidden" value="@Model.AccountID"/>

    <div class="form-group row">
        <label asp-for="StartDate" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="StartDate">
            <span asp-validation-for="StartDate" class="text-danger"></span>
        </div>
        
        <label asp-for="EndDate" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="EndDate">
            <span asp-validation-for="EndDate" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group">
        <input type="submit" value="View History" class="btn btn-primary" />
    </div>
</form>

<div>
    <a asp-action="Index">Back to Account selection</a>
</div>